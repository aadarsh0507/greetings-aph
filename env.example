# Node Environment
NODE_ENV=production
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://admin:adminpassword@mongodb:27017/birthday_greeting?authSource=admin
MONGO_ROOT_PASSWORD=adminpassword

# MSSQL Configuration (Your existing database)
MSSQL_SERVER=your-mssql-server.database.windows.net
MSSQL_DATABASE=your-database-name
MSSQL_USER=your-username
MSSQL_PASSWORD=your-password
MSSQL_PORT=1433

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WhatsApp API Configuration
WHATSAPP_API_URL=https://your-whatsapp-api-url.com
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_TEMPLATE_NAME=birthday_greeting

# GitHub Repository (for docker-compose)
GITHUB_REPOSITORY=yourusername/aph-grettings

