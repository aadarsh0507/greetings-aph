# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000
SERVE_FRONTEND=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# MongoDB Configuration
MONGO_URI=mongodb://username:password@host:port/database_name?authSource=admin
MONGODB_URI=mongodb://username:password@host:port/database_name

# MSSQL Database Configuration
MSSQL_USER=your_mssql_username
MSSQL_PASS=your_mssql_password
MSSQL_SERVER=your_mssql_server_ip
MSSQL_DATABASE=your_mssql_database_name

# WhatsApp API Configuration
WA_API_BASE=https://your-whatsapp-api-endpoint.com/api/sendtemplate.php
LICENSE_NUMBER=your_license_number
API_KEY=your_api_key
CONTACT=your_contact_number
TEMPLATE=birthday_wishes
TAG=optional_tag_for_messages
